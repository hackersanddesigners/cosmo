<% const { title } = header %>

<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include( 'head' ) %>
    <link rel="stylesheet" type = "text/css" href="/styles/index.css">
    <title><%= title %></title>
  </head>
  <body>

    <%- include( 'utils/grid' ) -%>
    <%- include( 'header', header ) -%>

    <main>
      
      <h1> <%= title %> </h1>
      
      <section 
        id="main-content"
        class="articles"
      >
        <% for ( const article of articles ) { %> 
          <%- include( 'article-block', { article }) %> 
        <% } %> 
      </section>
    
    </main>

    <%- include( 'footer', footer ) -%>

  </body>
</html>
