<% const { 

  slug,
  title, 
  author,
  version,
  createdAt,
  publishedAt,
  updatedAt,
  siblings,
  body,

} = article %>

<!DOCTYPE html>
<html lang="en">

  <head>
    <%- include( 'head' ) %>
    <title><%= title %></title>
    <link rel="stylesheet" type = "text/css" href="/styles/article.css">
  </head>

  <body>

    <%- include( 'header', header ) -%>

    <main>

      <h1> <%= title %> </h1>
      <h2> <%= author %> </h2>
  
      <%- include( 'meta', { 
        createdAt,
        publishedAt,
        updatedAt
      }) -%>
      
      <% if ( siblings ) { %> 
        <%- include( 'history', { 
          slug,
          siblings 
        }) -%>
      <% } %> 

      <% for ( const section of body ) { %> 
        <%- include( 'section', { section }) -%>
      <% } %> 

    </main>

    <%- include( 'footer', footer ) -%>

  </body>
</html>
    